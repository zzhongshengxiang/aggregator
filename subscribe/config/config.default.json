domains:
  - name: "My_Personal_Proxy"
    sub: 
      - "https://your-private-sub.com/link"  # 替换为您的私人订阅链接
    enable: true
    rename: "PROXY_{country}_{index}"  # 节点重命名规则
    include: "HK|SG|JP|US"             # 包含这些地区节点
    exclude: "过期|测试"                # 排除测试节点
    push_to: ["personal-clash"]        # 推送到Clash配置组
    liveness: true                    # 启用节点存活检测
    rate: 200                         # 限速200Mbps
    count: 30                         # 最多保留30个优质节点

crawl:
  enable: true
  threshold: 5                        # 至少5个有效节点
  persist:
    subs: "crawledsubs"               # 原始订阅存储
    proxies: "crawledproxies"         # 节点信息存储
  
  # Telegram频道爬取
  telegram:
    enable: true
    pages: 3                          # 爬取3页历史消息
    users:
      freev2ray:                      # 替换为实际频道用户名
        include: "vmess|vless|trojan"
        exclude: "付费|会员"
        push_to: ["crawledsubs"]
  
  # GitHub爬取配置
  github:
    enable: true
    pages: 2
    exclude: "backup|archive"
    spams: ["expired", "fake"]
    push_to: ["crawledsubs"]
  
  # 自定义页面爬取
  pages:
    - enable: true
      url: "https://free-node-list.com"  # 替换为您的节点列表页
      include: "://"
      push_to: ["crawledsubs"]

groups:
  personal:
    emoji: true                      # 添加地区emoji标识
    list: true                       # 输出节点列表
    targets:
      clash: "personal-clash"        # Clash配置名称
    
    # 节点名规范化
    regularize:
      enable: true
      locate: true                   # 添加地区信息
      bits: 1                        # 速率保留1位小数

storage:
  engine: "gist"                     # 使用Gist存储
  base: "https://api.github.com"     # GitHub API地址
  domain: "https://gist.githubusercontent.com"
  items:
    personal-clash:                  # 对应groups中的targets
      username: "your_github_user"   # 替换为GitHub用户名
      fileid: "9957f23da42ac734976b47fb2496630a/clash.yaml"  # Gist文件路径
    
    # 爬取内容存储 (可选)
    crawledsubs:
      username: "your_github_user"
      fileid: "9957f23da42ac734976b47fb2496630a/raw_subs.txt"
